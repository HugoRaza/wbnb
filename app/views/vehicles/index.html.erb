<h1>Vehicle Index</h1>

<% @vehicles.each do |vehicle| %>
  <img src= <%= vehicle.image %> alt="">
   <%= link_to "#{vehicle.name} (#{vehicle.price} â‚¬)", vehicle_path(vehicle) %>
  <p><%= vehicle.location %></p>
  <% sum = 0.0 %>
