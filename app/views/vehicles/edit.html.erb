<div class="main">
  <h1>Edit your vehicle</h1>
  
    <%= simple_form_for @vehicle do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.input :name %>
      <%= f.input :category, collection: %w[bike wheelbarrow scooter skateboard animal roller fantasy other] %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :location, input_html: { id: :autocompletion }  %>
      <%= f.input :image %>
      <%= f.button :submit %>
    <% end %>
    <hr>
    <%= link_to 'Back', owner_dashboard_path %>
</div>
