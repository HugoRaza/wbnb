<div class="row">
  <% vehicles.each do |vehicle| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card-vehicle">

        <div class="bike-background">
          <%= cl_image_tag vehicle.image, class:'vehicle-avatar' %>
          <%= cl_image_tag vehicle.user.profile_picture, class:'user-avatar rotate' %>
          <div class="flex-header">
            <div><i class="fas fa-map-marker-alt"></i> <%= vehicle.location %></div>
            <div class="rating">
              <% if vehicle.vehicle_reviews.average(:rating) %>
                <%= "#{vehicle.vehicle_reviews.average(:rating).round(1)}/5" %>
              <% else %>
                <%= "?/5" %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="card-vehicle-body flex-body">
          <div><%= vehicle.price %>â‚¬/day</div>
          <%= link_to "View vehicle", vehicle_path(vehicle), class: 'btn btn-primary' %>
        </div>

        <div class="card-vehicle-footer">
          <h5><%= vehicle.name %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
