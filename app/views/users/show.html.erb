<div class="container">

  <div class="user-total">
    <div class="myprofile-img">
      <%if @user.profile_picture.to_s.include?("cloudinary")  %>
        <%= cl_image_tag @user.profile_picture, class: "user-img-size", height: 200, width: 200, crop: :fill  %>
      <% else %>
        <%= image_tag 'https://d2gg9evh47fn9z.cloudfront.net/800px_COLOURBOX8353755.jpg', width: 300, height: 200 %>
      <% end %>
    </div>
    <div class="info-user">
      <div class="info-name">
          <p> <i class="fas fa-user"></i> <%= @user.first_name %> <%= @user.last_name %></p>
        </div>
        <div class="info-email">
          <p> <i class="fas fa-at"></i> <%= @user.email %> </p>
      </div>
      <div class="edit">
        <i class="fas fa-edit"></i> <%= link_to "Edit your informations", edit_user_path(@user)  %>
      </div>
    </div>
  </div>

  <div class="rentals-info">
    <h3><i class="fas fa-eye"></i> Activity details</h3>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">You own <%= pluralize @user.vehicles.count, "vehicle" %>.</li>
      <li class="list-group-item">You have <%= pluralize @user.rentals.count, "reservation" %> in your Rides.</li>
      <li class="list-group-item">You have <%= pluralize @user.vehicle_rentals.count, "reservation" %> in your Wheelbarrows.</li>
    </ul>
  </div>

</div>
